<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="100dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:id="@+id/Score_TeamA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="60sp"
                android:textColor="@color/black"
                android:layout_marginBottom="30dp"/>
            <Button
                android:id="@+id/TeamA_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+3 POINTS"
                app:backgroundTint="#FF9800"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                android:onClick="Score_increment_3_TeamA"/>
            <Button
                android:id="@+id/TeamA_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+2 POINTS"
                app:backgroundTint="#FF9800"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                android:onClick="Score_increment_2_TeamA"/>
            <Button
                android:id="@+id/TeamA_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FREE THROW"
                app:backgroundTint="#FF9800"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:onClick="Score_increment_1_TeamA"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:id="@+id/Score_TeamB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="60sp"
                android:textColor="@color/black"
                android:layout_marginBottom="30dp"/>
            <Button
                android:id="@+id/TeamB_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+3 POINTS"
                app:backgroundTint="#FF9800"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                android:onClick="Score_increment_3_TeamB"/>
            <Button
                android:id="@+id/TeamB_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+2 POINTS"
                app:backgroundTint="#FF9800"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                android:onClick="Score_increment_2_TeamB"/>
            <Button
                android:id="@+id/TeamB_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FREE THROW"
                app:backgroundTint="#FF9800"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:onClick="Score_increment_1_TeamB"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/Reset_Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        app:backgroundTint="#FF9800"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:onClick="Reset_Score_Teams"/>

</LinearLayout>